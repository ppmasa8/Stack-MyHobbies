<%= search_form_for @q do |f| %>
  <%= f.label :year_or_title_or_abstract_or_status, "キーワード検索" %>
  <%= f.search_field :year_or_title_or_abstract_or_status_cont %>

  <%= f.submit "検索" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :year, "Year") %></th>
      <th><%= sort_link(@q, :title, "Title") %></th>
      <th><%= sort_link(@q, :abstract, "Abstract") %></th>
      <th><%= sort_link(@q, :status, "Status") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.year %></td>
        <td><%= movie.title %></td>
        <td><%= movie.abstract %></td>
        <td><%= movie.status %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @movies %>
<%= link_to 'New Movie', new_movie_path %>
