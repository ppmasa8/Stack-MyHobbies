<%= search_form_for @q do |f| %>
  <%= f.label :year_or_title_or_abstract_or_status, "キーワード検索" %>
  <%= f.search_field :year_or_title_or_abstract_or_status_cont %>

  <%= f.submit "検索" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :year, "Year") %></th>
      <th><%= sort_link(@q, :title, "Title") %></th>
      <th><%= sort_link(@q, :abstract, "Abstract") %></th>
      <th><%= sort_link(@q, :status, "Status") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.year %></td>
        <td><%= comic.title %></td>
        <td><%= comic.abstract %></td>
        <td><%= comic.status %></td>
        <td><%= link_to 'Show', comic %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comic', new_comic_path %>
